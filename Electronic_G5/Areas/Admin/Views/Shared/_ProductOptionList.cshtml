@model IEnumerable<Electronic_G5.Models.ProductOption>


<div id="productOptionList">
    @foreach (var option in Model)
    {
        <div class="product-option-item position-relative px-2 py-1 border mt-2">
            <p class="mb-0">@option.product_option_name - @option.product_option_name - @option.product_option_price</p>
            <button type="button" class="position-absolute top-0 end-0 me-2 mt-1 border-0 outline-none bg-white remove-option" data-id="@option.product_option_id">x</button>
        </div>
    }
</div>