@model Electronic_G5.Models.Order

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="card mb-3">
    <div class="bg-holder d-none d-lg-block bg-card" style="background-image:url(../../../assets/img/icons/spot-illustrations/corner-4.png);opacity: 0.7;"></div><!--/.bg-holder-->
    <div class="card-body position-relative">
        <h5>Chi tiết đơn hàng: #@(Model.order_id)</h5>
        <p class="text-sm text-gray-500">@Model.order_date</p>
        <div>
            <strong class="me-2">Trạng thái: </strong><span> @Model.order_status</span>
        </div>
    </div>
</div>
<div class="card mb-3">
    <div class="card-body">
        <div class="row">
            <div class="col-md-6 col-lg-4 mb-4 mb-lg-0">
                <h5 class="mb-3 fs-9">Thông tin khách hàng</h5>
                <h6 class="mb-2">@Model.User.full_name</h6>
                <p class="mb-0 fs-10">@Model.Shipment.address</p>
                <p class="mb-0 fs-10"> @Model.Shipment.city - @Model.Shipment.state - @Model.Shipment.country </p>
                <p class="mb-0 fs-10"> <strong>Email: </strong><a href="@Model.User.email">@Model.User.email</a></p>
                <p class="mb-0 fs-10"> <strong>Phone: </strong><a href="tel:@Model.User.phone_number">@Model.User.phone_number</a></p>
            </div>
            <div class="col-md-6 col-lg-4 mb-4 mb-lg-0">
                <h5 class="mb-3 fs-9">Địa chỉ giao hàng</h5>
                <h6 class="mb-2">@Model.User.full_name</h6>
                <p class="mb-0 fs-10">@Model.Shipment.address</p>
                <p class="mb-0 fs-10"> @Model.Shipment.city - @Model.Shipment.state - @Model.Shipment.country </p>
                <div class="text-500 fs-10">@Model.Shipment.zip_code</div>
            </div>
            <div class="col-md-6 col-lg-4">
                <h5 class="mb-3 fs-9">Phương thức thanh toán</h5>
                <h6>@Model.Payment.payment_method</h6>
            </div>
        </div>
    </div>
</div>
<div class="card mb-3">
    <div class="card-body">
        <div class="table-responsive fs-10">
            <table class="table table-striped border-bottom">
                <thead class="bg-200">
                    <tr>
                        <th class="text-900 border-0">Sản phẩm</th>
                        <th class="text-900 border-0 text-center">Số lượng</th>
                        <th class="text-900 border-0 text-end">Giá</th>
                        <th class="text-900 border-0 text-end">Thành tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Order_Items)
                    {
                        <tr>
                            <td class="align-middle">
                                <h6 class="mb-0 text-nowrap">@item.Product.product_name</h6>
                            </td>
                            <td class="align-middle text-center">@item.quantity</td>
                            <td class="align-middle text-end">@item.price</td>
                            <td class="align-middle text-end">@item.Order.total_price</td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
        <div class="row g-0 justify-content-end">
            <div class="col-auto">
                <table class="table table-sm table-borderless fs-10 text-end">
                    <tbody>

                        <tr class="border-top">
                            <th class="text-900">Tổng:</th>
                            <td class="fw-semi-bold">@Model.total_price</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script type="text/javascript">

    </script>

}