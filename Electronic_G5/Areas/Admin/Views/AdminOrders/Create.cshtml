@model Electronic_G5.Models.Order

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Order</h4>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="card p-3">
            <div class="row">
                <div class="col-md-6 col-lg-4 mb-4 mb-lg-0">
                    <h5>Thông tin chung</h5>
                    <div class="form-group">
                        @Html.LabelFor(model => model.order_date, htmlAttributes: new { @class = "control-label col-md-12 text-sm" })
                        <div class="col-md-12 input-group-sm">
                            @Html.EditorFor(model => model.order_date, new { htmlAttributes = new { @class = "form-control small" } })
                            @Html.ValidationMessageFor(model => model.order_date, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.order_status, htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-12 input-group-sm">
                            <select id="order_status" name="order_status" class="form-control">
                                <option value="Đang xử lý">Đang xử lý</option>
                                <option value="Đã xác nhận">Đã xác nhận</option>
                                <option value="Đang được giao">Đang được giao</option>
                                <option value="Đã giao">Đã giao</option>

                            </select>
                            @Html.ValidationMessageFor(model => model.order_status, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.user_id, "Khách hàng", htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-12  input-group-sm">
                            @Html.DropDownList("user_id", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.user_id, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-4 mb-4 mb-lg-0">
                    <div class="d-flex align-items-center justify-content-between">
                        <h5>Thông tin giao hàng</h5>
                        <i class="bx bx-pencil"></i>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.shipment_id, "Địa chỉ giao hàng", htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-10">
                            @Html.DropDownList("shipment_id", null, htmlAttributes: new { @class = "form-control form-control-sm" })
                            @Html.ValidationMessageFor(model => model.shipment_id, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.payment_id, "Phương thức thanh toán", htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-10">
                            @Html.DropDownList("payment_id", null, htmlAttributes: new { @class = "form-control form-control-sm" })
                            @Html.ValidationMessageFor(model => model.payment_id, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.fulfillment_status, htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-12 input-group-sm">
                            <select id="fullfillment_status" name="order_status" class="form-control">
                                <option value="Chưa hoàn thành">Chưa hoàn thành</option>
                                <option value="Đã hoàn thành">Đã hoàn thành</option>
                                <option value="Sẵn sàng để nhận">Sẵn sàng để nhận</option>
                                <option value="Đã hủy">Đã hủy</option>

                            </select>
                            @Html.ValidationMessageFor(model => model.fulfillment_status, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.total_price, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.total_price, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.total_price, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#order_date").val(new Date().toLocaleDateString("vi-VN"))
        })
    </script>

}