
@{
    ViewBag.Title = "Register";
}
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Register</title>


    <!-- Custom styles for this template-->
    <link href="~/assets/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body class="bg-gradient-primary">

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Tạo tài khoản!</h1>
                            </div>
                            <form class="user" method="post" action="@Url.Action("Register", "Users")">
                                <div class="form-group">
                                    <input type="text" name="full_name" class="form-control form-control-user" id="txtHoTen"
                                           placeholder="Họ tên">
                                </div>
                                <div class="form-group ">
                                    <input type="email" name="email" class="form-control form-control-user" id="txtEmail"
                                           placeholder="Email">
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="password" name="password" class="form-control form-control-user"
                                               id="txtPass" placeholder="Mật khẩu">
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="password" class="form-control form-control-user"
                                               id="txtRePass" placeholder="Nhập lại mật khẩu">
                                    </div>
                                </div>
                                <input type="number" name="role_id" value="1" style="display: none" />
                                <input type="number" name="role" value="1" style="display: none" />
                                <input type="text" name="address" value="*" style="display: none" />
                                <input type="text" name="image" value="*" style="display: none" />
                                <input type="text" name="phone_number" value="*" style="display: none" />
                                <input type="submit" value="Đăng ký" class="btn btn-primary btn-user btn-block" />
                                <hr>
                            </form>
                            <hr>
                            <p>@ViewBag.error</p>
                            <div class="text-center">
                                <a class="small" href="@Url.Action("ForgotPass","Users")">Quên mật khẩu?</a>
                            </div>
                            <div class="text-center">
                                <a class="small" href="@Url.Action("Login", "Users")">Bạn đã có tài khoản? Đăng nhập!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</body>

</html>